<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayListActivity">

    <!--    밝기 설정   -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="밝기 수준"
        android:textColor="@color/black"
        android:padding="10dp" />

    <SeekBar
        android:id="@+id/BrightnessSB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="255"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />
<!--        android:background="@drawable/selector_seekbar"-->


    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="#bdbbbb"
        android:layout_marginTop="10dp"/>

    <!--    자동 밝기 조절 설정   -->
    <Switch
        android:id="@+id/BrightnessSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="2dp"
        android:text="자동 밝기 조절" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="빛의 양에 따라 밝기 수준 최적화"
        android:textSize="10sp"
        android:paddingLeft="10dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="#bdbbbb"
        android:layout_marginTop="10dp"/>

</LinearLayout>